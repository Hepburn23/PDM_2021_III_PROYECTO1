<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductoPorCodigoActivity">

    <EditText
        android:id="@+id/txtShowStock"
        android:layout_width="299dp"
        android:layout_height="0dp"
        android:layout_marginBottom="84dp"
        android:ems="10"
        android:hint="Stock Actual"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/txtShowProvider"
        android:layout_width="299dp"
        android:layout_height="50dp"
        android:layout_marginBottom="28dp"
        android:ems="10"
        android:hint="Proveedor"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/txtShowPrice"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnSearchProdPerCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="44dp"
        android:text="Buscar"
        app:layout_constraintBottom_toTopOf="@+id/txtShowCode"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/txvProdPerCode"
        android:layout_width="209dp"
        android:layout_height="32dp"
        android:layout_marginTop="48dp"
        android:text="Visualizar Producto por Codigo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtShowName"
        android:layout_width="299dp"
        android:layout_height="50dp"
        android:layout_marginBottom="48dp"
        android:ems="10"
        android:hint="Nombre"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/txtShowProvider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/txtShowCode"
        android:layout_width="299dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="Codigo"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/txtShowName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/txtShowPrice"
        android:layout_width="299dp"
        android:layout_height="51dp"
        android:layout_marginBottom="44dp"
        android:ems="10"
        android:hint="Precio"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/txtShowStock"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/txtSearchProdPerCode"
        android:layout_width="353dp"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="Ingrese Codigo del Producto"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txvProdPerCode" />

</androidx.constraintlayout.widget.ConstraintLayout>